
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
@if (ViewBag.ErrorMessage != null)
{
    <h3 class="btn-danger">@ViewBag.ErrorMessage</h3>
}
<h2>Settings</h2>
<form action="/Manage/ChangePassword" method="post">
    <fieldset>
        <legend>Slaptažodžio keitimas</legend>
        Įveskite seną slaptažodį: <input type="password" name="oldPassword" required /> <br />
        Įveskite naują slaptažodį: <input type="password" name="newPassword" required/><br />
        Pakartokite naują slaptažodį: <input type="password" name="repeatNewPassword" required/><br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form action="/Manage/ChangeEmail" method="post">
    <fieldset>
        <legend>Elektroninio pašto keitimas</legend>
        Įveskite seną elektroninį paštą: <input type="email" name="oldEmail" required/><br />
        Įveskite naują elektroninį paštą: <input type="email" name="newEmail" required/><br />
        Įveskite slaptažodį <input type="password" name="password" required/><br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form action="/Manage/ChangeUsername" method="post">
    <fieldset>
        <legend>Paskyros vardo keitimas</legend>
        Įveskite naują paskyros vardas:<input type="text" name="newUserName" required /> <br />
        Įveskite slaptažodį: <input type="password" name="password" required/> <br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form action="/Manage/DeleteAccount" method="delete">
    <fieldset>
        <legend>Paskyros šalinimas</legend>
        Įveskite slaptažodį: <input type="password" name="password" required /> <br />
        <button type="submit" class="btn btn-danger">Šalinti</button>
    </fieldset>
</form>