
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<h2>Settings</h2>
<form method="post">
    <fieldset>
        <legend>Slaptazodzio keitimas</legend>
        Įveskite seną slaptažodi: <input type="password" name="oldPassword" /> <br />
        Įveskite naują slaptažodi: <input type="password" name="newPassword" /><br />
        Pakartokite naują slaptažodi: <input type="password" name="repeatNewPassword" /><br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form>
    <fieldset>
        <legend>Email keitimas</legend>
        Įveskite seną email: <input type="email" name="oldEmail" /><br />
        Įveskite naują email: <input type="email" name="newEmail" /><br />
        Įveskite slaptažodį <input type="email" name="password" /><br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form>
    <fieldset>
        <legend>Paskyros vardo keitimas</legend>
        Naujas vardas:<input type="text" name="newUserName" /> <br />
        Slaptazodis: <input type="password" name="password" /> <br />
        <button type="submit" class="btn btn-info">Keisti</button>
    </fieldset>
</form>
<br />
<br />
<form method="delete">
    <fieldset>
        <legend>Paskyros salinimas</legend>
        <button type="submit" class="btn btn-danger">salinti</button>
    </fieldset>
</form>