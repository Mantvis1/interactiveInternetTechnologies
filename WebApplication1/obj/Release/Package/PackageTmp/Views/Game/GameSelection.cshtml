@model WebApplication1.Models.ViewTournamentModel
@{
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<h2>Registracija į turnyrą</h2>
<button type="button" onclick="location.href='@Url.Action("RegisterNewCompetotor", "Game")'">Registruotis</button>
<div class="progress" style="width:20%">
    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="@Model.PartOfRequiredUsers"
         aria-valuemin="0" aria-valuemax="8" style="width:@Model.PartOfRequiredUsers%">
        @Model.NumberOfUsers
    </div>
</div>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert-success">@ViewBag.SuccessMessage</div>
}